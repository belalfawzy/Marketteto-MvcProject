@using Marketteto.Data.ViewModel
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background: #f8f9fa;
    }

    .login-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        background-color: #ffffff;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        border-radius: 10px;
    }

    .login-title {
        font-size: 28px;
        font-weight: 600;
        text-align: center;
        margin-bottom: 25px;
        color: #343a40;
    }

    .form-control {
        border-radius: 8px;
    }

    .btn-custom {
        width: 100%;
        border-radius: 8px;
    }

    .register-link {
        display: block;
        text-align: center;
        margin-top: 15px;
        color: #6c757d;
    }

        .register-link:hover {
            text-decoration: underline;
        }
</style>

<div class="login-container">
    <h2 class="login-title">Login</h2>

    <form asp-action="Login" asp-controller="Account">
        <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-3"></div>

        <div class="form-group mb-3">
            <label asp-for="EmailAddress" class="form-label">Email</label>
            <input asp-for="EmailAddress" class="form-control" autocomplete="off" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" autocomplete="off" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-success btn-custom" />
        </div>

        <a asp-action="Register" class="register-link">Don't have an account? Register here</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}