@model List<Product>

<div class="container mt-4">
    <div class="row g-4">
        @foreach (var v in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 d-flex justify-content-center">
                <div class="card product-card" style="width: 100%; max-width: 250px;">
                    <img src="@v.Image" alt="@v.Name" class="card-img-top product-img" />
                    <div class="card-body d-flex flex-column text-center">
                        <h5 class="card-title">@v.Name</h5>
                        <p class="card-text text-muted mb-1">@($"{v.Price:0.00} EGP")</p>
                        <p class="card-text">@v.Description</p>
                        <p class="card-text text-secondary">@v.category.Name</p>
                        <p class="card-text text-muted mb-1">@v.Color</p>
                        <div class="mt-auto">
                            <button class="btn add-to-cart-btn w-100">🛒 Add to Cart</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

