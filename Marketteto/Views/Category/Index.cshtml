@model List<Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="container mt-5">
    <div class="row justify-content-between align-items-center mb-4">
        <div class="col">
            <h3 class="fw-bold text-secondary">
                <i class="fas fa-layer-group me-2"></i> Categories
            </h3>
        </div>
        <div class="col-auto">
            <a asp-action="Create" class="btn btn-outline-success">
                <i class="fas fa-plus me-1"></i> Create New
            </a>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var category in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm border border-1 border-light-subtle rounded-4 bg-light">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title text-dark fw-semibold">
                                <i class="fas fa-tag me-2 text-muted"></i> @category.Name
                            </h5>
                            <p class="card-text flex-grow-1 text-muted">@category.Description</p>

                            <div class="d-flex justify-content-between pt-3 mt-auto border-top">
                                <a asp-action="Details" asp-route-id="@category.Id" class="btn btn-sm btn-outline-secondary">
                                    <i class="fas fa-eye me-1"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-outline-primary">
                                    <i class="fas fa-edit me-1"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure this Delete this Category')">
                                    <i class="fas fa-trash me-1"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-light border text-muted text-center mt-4">
            <i class="fas fa-info-circle me-2"></i> No categories found.
        </div>
    }
</div>