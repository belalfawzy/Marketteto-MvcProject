@model Category

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-gradient bg-success text-white rounded-top-4 d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-tag me-2"></i> @Model.Name
                    </h4>
                </div>

                <div class="card-body py-4 px-5">
                    <div class="mb-4">
                        <h6 class="text-muted text-uppercase">Category Name</h6>
                        <p class="fs-5 fw-semibold text-primary mb-0">@Model.Name</p>
                    </div>

                    <div class="mb-4">
                        <h6 class="text-muted text-uppercase">Description</h6>
                        <p class="fs-6 text-dark mb-0">@Model.Description</p>
                    </div>

                    <hr class="my-4" />

                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-success">
                            <i class="fas fa-edit me-1"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-1"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>